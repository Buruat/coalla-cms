- active = current_page?(item.path) || item.section_name.to_s == controller_name
%li{class: active && 'active'}
  = link_to item.path do
    %i{class: item.icon}
    &nbsp;
    = item.name.html_safe
    - if item.show_menu_counter? && item.counter
      &nbsp;
      %span.badge.pull-right
        = item.counter.call
